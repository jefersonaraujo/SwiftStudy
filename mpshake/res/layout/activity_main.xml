<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.fa7.mpshake.MainActivity$PlaceholderFragment" >

    <ListView
        android:id="@+id/main_list_playlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_seek_song_position"
        android:choiceMode="singleChoice" />

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/main_button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/main_previous_button_image"
            android:src="@drawable/rewind" />

        <ImageButton
            android:id="@+id/main_button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/main_stop_button_image"
            android:src="@drawable/stop" />

        <ImageButton
            android:id="@+id/main_button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/main_play_button_image"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@+id/main_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/main_play_button_image"
            android:src="@drawable/forward" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_text_song_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_container"
        android:layout_alignLeft="@+id/buttons_container"
        android:layout_alignRight="@+id/buttons_container"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/main_seek_song_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_text_song_info"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true" />

</RelativeLayout>